<%= form_with(model: post, local: true) do |form| %>
    <div class="form-group">
        <%= form.label :title, 'タイトル',  class: 'form-label m-3' %>
        <%= form.text_field :title, class: 'form-control custom-width m-3' %>
    </div>

        <div class="form-group">
        <%= form.label :subtitle, 'サブタイトル',  class: 'form-label m-3' %>
        <%= form.text_field :subtitle, class: 'form-control custom-width m-3' %>
    </div>

    <div class="form-group">
        <%= form.label :content, '本文', class: 'form-label m-3' %>
        <%= form.text_area :content, class: 'form-control custom-width m-3', rows: 4 %>
    </div>

    <div class="form-group">
        <%= form.label :image, '画像', class: 'form-label m-3' %>
        <%= form.file_field :image, class: 'form-control custom-width m-3'%>
    </div>

    <div class="form-group">
        <%= form.label :category,'カテゴリー選択', class: "form-label" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, {}, class: "form-control custom-width" %>
        </div>

        <div class="form-group">
        <%= form.label :month,'投稿月', class: "form-label" %>
        <%= form.collection_select :month_id, Month.all, :id, :name, {}, class: "form-control custom-width" %>
        </div>

    <div class="form-group">
        <%= form.submit '送信', class: 'btn btn-primary' %>
    </div>
<% end %>