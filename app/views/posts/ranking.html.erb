<h1>閲覧数ランキング</h1>
<div class="container mt-4">
    <div class="row">
    <% @posts.each do |post| %>
        <div class="col-md-4 mb-10">
        <%= "閲覧数: #{post.count.count} 回" %>
        <%= link_to post_path(post.id) do %>
        <div class="card">
            <%= image_tag post.image, class: 'card-img-top underline-punish custom-image-size' %>
            <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= post.content %></p>
            </div>
        </div>
        <% end %>
        </div>
    <% end %>
    </div>
</div>