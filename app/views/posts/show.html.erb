
<div class="container mt-5">
    <!-- タイトル -->
    <h1 class="mb-4"><%= @post.title %></h1>

    <!-- 画像 -->
    <% if @post.image.attached? %>
    <div class="text-center mb-4">
        <%= image_tag @post.image, class: "img-fluid rounded image-width" %>
    </div>
    <% end %>

    <!-- サブタイトル -->
    <h2 class="mb-3"><%= @post.subtitle %></h2>

    <!-- 本文（枠線で囲む） -->
    <div class="border p-3 mb-4">
    <p><%= @post.content %></p>
    </div>



    <p>カテゴリー: <%= @post.category.name %></p>
    <p>投稿月: <%= @post.month.name %></p>

    <!-- 他の詳細情報の表示 -->

    <p>投稿日時<%= @post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
    <p>閲覧数: <%= @post.count&.count || 0 %></p>

    <!-- 編集ボタン -->
    <%#= link_to "Edit", edit_post_path(@post), class: "btn btn-primary mr-2" %>

    <!-- 削除ボタン -->
    <%#= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-danger" %>

    <%= link_to "トップページに戻る", root_path, class: "btn btn-secondary mt-3 mb-4" %>
</div>