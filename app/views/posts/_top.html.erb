<div class="container mt-4">
    <div class="row">
    <% posts.each do |post| %>
        <div class="col-md-4 mb-10">
        <%= link_to post_path(post.id) do %>
        <div class="card">
            <%= image_tag post.image.variant(resize: '500x500'), class: 'card-img-top underline-punish' %>
            <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= post.content %></p>
            </div>
        </div>
        <% end %>
        </div>
    <% end %>
    </div>
</div>